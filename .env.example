# Screen2Deck Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_ENV=online
PORT=8080
LOG_LEVEL=INFO
DISABLE_TESSERACT=true

# Security
JWT_SECRET_KEY=your-secret-key-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_PREFIX=s2d_

# Database
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/screen2deck
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
USE_REDIS=true
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# OCR Settings
ENABLE_VISION_FALLBACK=false
ENABLE_SUPERRES=false
OCR_MIN_CONF=0.62
OCR_MIN_LINES=10
MAX_IMAGE_MB=8
FUZZY_MATCH_TOPK=5

# Scryfall (ONLINE ONLY)
ALWAYS_VERIFY_SCRYFALL=true
SCRYFALL_API_TIMEOUT=5
SCRYFALL_API_RATE_LIMIT_MS=120

# OpenAI (optional)
OPENAI_API_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://screen2deck.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
FEATURE_WEBSOCKET=true
FEATURE_GRAPHQL=false
FEATURE_ASYNC_PROCESSING=true