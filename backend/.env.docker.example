# Example Docker environment configuration for Screen2Deck backend
# Copy this file to .env.docker and adjust values for your environment

# Database configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@postgres:5432/screen2deck

# Redis configuration
REDIS_URL=redis://redis:6379/0

# Security (CHANGE IN PRODUCTION!)
JWT_SECRET_KEY=change-this-secret-key-in-production

# OCR configuration
OCR_MIN_CONF=0.62
ALWAYS_VERIFY_SCRYFALL=true

# Telemetry configuration
FEATURE_TELEMETRY=false
OTEL_SDK_DISABLED=true